<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/back"/>
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="13dp"
        android:src="@drawable/icon"/>
    <TextView
        android:id="@+id/tv_woopayWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:text="@string/woopay_wallet"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/ed_smsCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_woopayWallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_regular"
        android:maxLength="7"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:hint="@string/enter_sms_code"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ed_smsCode"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:text="@string/next"
        android:textSize="16sp"
        android:enabled="false"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_regular"
        android:background="@drawable/background_button"/>
    <Button
        android:id="@+id/btn_new_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/new_code"
        android:textSize="16sp"
        android:enabled="false"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_regular"
        android:background="@drawable/background_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>