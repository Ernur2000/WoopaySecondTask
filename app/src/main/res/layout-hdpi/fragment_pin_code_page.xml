<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,ContentDescription">
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="90dp"
            android:textColor="#8492A6"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/line1"
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_default_line_grey_2"
            app:layout_constraintEnd_toStartOf="@id/line2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_greeting" />

        <View
            android:id="@+id/line2"
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_default_line_grey_2"
            app:layout_constraintEnd_toStartOf="@id/line3"
            app:layout_constraintStart_toEndOf="@id/line1"
            app:layout_constraintTop_toTopOf="@id/line1" />

        <View
            android:id="@+id/line3"
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_default_line_grey_2"
            app:layout_constraintEnd_toStartOf="@id/line4"
            app:layout_constraintStart_toEndOf="@id/line2"
            app:layout_constraintTop_toTopOf="@id/line1" />

        <View
            android:id="@+id/line4"
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_default_line_grey_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/line3"
            app:layout_constraintTop_toTopOf="@id/line1" />

        <TextView
            android:id="@+id/text_pin_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:textColor="#DA2C2C"
            app:layout_constraintBottom_toTopOf="@id/grid_pins" />

        <GridLayout
            android:id="@+id/grid_pins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:columnCount="3"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1">

            <TextView
                android:id="@+id/number_1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_5"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_6"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_7"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_8"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/number_9"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/ic_touch_id"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:visibility="invisible"
                android:background="@drawable/background_round_pin_code"
                android:padding="20dp"
                android:src="@drawable/ic_pin_code_touch_id" />

            <TextView
                android:id="@+id/number_0"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/ic_delete"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                android:background="@drawable/background_round_pin_code"
                android:padding="20dp"
                android:src="@drawable/ic_pin_code_delete" />
        </GridLayout>
        <TextView
            android:id="@+id/forgot_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/grid_pins"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/forgotPass"
            android:textAllCaps="false"
            android:textColor="@color/blue_400" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
